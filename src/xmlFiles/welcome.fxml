<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainBox" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.WelcomeController">
    <Label text="Welcome" textAlignment="CENTER"/>
    <TextField promptText="Insert some data">
        <font>
          <Font size="10.0"/>
        </font>
    </TextField>
    <TextField promptText="Insert more data">
        <font>
          <Font size="10.0"/>
        </font>
    </TextField>
    <Button mnemonicParsing="false" onAction="#ShowTripIdeas" text="Show trip ideas">
        <font>
          <Font size="10.0"/>
        </font>
    </Button>
</VBox>
